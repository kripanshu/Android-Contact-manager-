<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/appBarLayout2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="1dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingLeft="5dp">


        <TextView
            android:id="@+id/first_nameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_marginTop="38dp"
            android:text="First Name :"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="First Name :" />

        <TextView
            android:id="@+id/last_nameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:text="Last Name :"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Last_Name :"
            android:layout_below="@+id/first_nameedit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/contact_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/phone_edit"
            android:layout_alignBottom="@+id/phone_edit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Phone :"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Phone :" />

        <TextView
            android:id="@+id/email_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contact_view"
            android:layout_alignStart="@+id/contact_view"
            android:layout_below="@+id/contact_view"
            android:layout_marginTop="73dp"
            android:text="Email :"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Email ID :" />

        <TextView
            android:id="@+id/birth_dateview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email_view"
            android:layout_alignStart="@+id/email_view"
            android:layout_below="@+id/email_view"
            android:layout_marginTop="62dp"
            android:text="Birth Date :"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Birth Date :" />

        <EditText
            android:id="@+id/first_nameedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/first_nameview"
            android:layout_alignBottom="@+id/first_nameview"
            android:layout_alignLeft="@+id/Update"
            android:layout_alignStart="@+id/Update"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/last_nameedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/last_nameview"
            android:layout_alignBottom="@+id/last_nameview"
            android:layout_alignLeft="@+id/first_nameedit"
            android:layout_alignStart="@+id/first_nameedit"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/birth_dateedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/last_nameedit"
            android:layout_alignRight="@+id/last_nameedit"
            android:layout_below="@+id/email_view"
            android:layout_marginTop="51dp"
            android:ems="10"
            android:inputType="date"
             />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/birth_dateedit"
            android:layout_alignRight="@+id/birth_dateedit"
            android:layout_below="@+id/contact_view"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:inputType="textEmailAddress"
             />

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:inputType="phone"

            android:layout_below="@+id/last_nameedit"
            android:layout_alignLeft="@+id/last_nameedit"
            android:layout_alignStart="@+id/last_nameedit" />

        <Button
            android:id="@+id/Update"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:background="?android:attr/actionModeSplitBackground"
            android:elevation="0dp"

            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </RelativeLayout>
</LinearLayout>